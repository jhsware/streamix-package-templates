{
  "name": "[name-of-your-package]",
  "description": "Graphics overlay package for Streamix",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "dev": "parcel --target dev",
    "build:libs": "parcel build --config ./_streamixSrc/.prod_parcelrc --no-content-hash --no-cache --target package && npm run build:copy-assets",
    "build:copy-assets": "mkdir -p package/$npm_package_name && cp -r assets/* package/$npm_package_name && cp src/streamix_package.json package",
    "test:type-check": "tsc --noEmit --skipLibCheck",
    "test:jest": "jest",
    "test:updateSnapshot": "jest --updateSnapshot"
  },
  "targets": {
    "dev": {
      "source": "_streamixSrc/index.html",
      "engines": {
        "browsers": "Safari 15"
      },
      "scopeHoist": true
    },
    "package": {
      "source": "_streamixSrc/package.ts",
      "context": "browser",
      "outputFormat": "global",
      "distDir": "package",
      "engines": {
        "browsers": "Safari 15"
      }
    }
  },
  "dependencies": {
    "component-registry": "^3.0.0-beta.3",
    "inferno": "^8.0.0",
    "inferno-animation": "^8.0.0",
    "streamix-runtime": "^1.0.0-beta.8",
    "streamix-interfaces": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.20.7",
    "@parcel/transformer-js": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "@types/node": "^17.0.35",
    "babel-plugin-inferno": "^6.3.0",
    "parcel": "^2.5.0",
    "parcel-config-streamix-runtime": "^1.0.0-beta.8",
    "streamix-package-editor": "^1.0.0-beta.8",
    "typescript": "~4.7.2"
  }
}