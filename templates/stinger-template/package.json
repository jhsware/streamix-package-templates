{
  "name": "[name-of-your-package]",
  "description": "Stinger graphics package for Streamix",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "source": "_streamixSrc/index.html",
  "targets": {
    "development": {
      "source": "_streamixSrc/index.html"
    },
    "package": {
      "source": "_streamixSrc/index.html",
      "context": "browser",
      "outputFormat": "global",
      "distDir": "package",
      "engines": {
        "browsers": "Safari 15"
      }
    }
  },
  "staticFiles": {
    "staticPath": "assets/",
    "staticOutPath": "packages/[name-of-your-package]"
  },
  "parcelIgnore": [
    "^packages/.*/images/"
  ],
  "alias": {
    "inferno": {
      "global": "Inferno"
    },
    "inferno-animation": {
      "global": "InfernoAnimation"
    },
    "component-registry": {
      "global": "ComponentRegistry"
    }
  },
  "scripts": {
    "dev": "parcel --target package",
    "build:deps": "(cd ../..; npm run dev:clean)",
    "build": "rollup --config ./rollup.config.js"
  },
  "dependencies": {
    "component-registry": "^2.0.0",
    "inferno": "^8.0.0",
    "inferno-animation": "^8.0.0",
    "streamix-package-editor": "^1.0.0-beta.1",
    "streamix-runtime": "^1.0.0-beta.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@parcel/config-default": "^2.5.0",
    "@parcel/packager-ts": "^2.5.0",
    "@parcel/transformer-babel": "^2.5.0",
    "@parcel/transformer-js": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "@parcel/transformer-typescript-types": "^2.5.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/node": "^17.0.35",
    "acorn-jsx": "^5.3.2",
    "babel-plugin-inferno": "^6.3.0",
    "parcel": "^2.5.0",
    "parcel-resolver-ignore": "^2.1.1",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.26.3",
    "typescript": "~4.7.2"
  }
}